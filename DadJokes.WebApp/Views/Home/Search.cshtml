@model DadJokes.WebApp.Models.Home.SearchViewModel
@{
    ViewData["Title"] = "Search Dad Jokes";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Home" asp-action="Search">
    <div class="input-group">
        <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control"/>
        <input type="submit" value="Search" class="btn btn-primary"/>
    </div>
</form>

<div>
    @if (Model.GroupedJokes != null)
    {
        foreach (var jokeGroup in Model.GroupedJokes)
        {
            <h2 class="mt-4">@jokeGroup.Key</h2>
            <ul class="list-group">
                @foreach (var joke in jokeGroup.Value)
                {
                    <li class="list-group-item">@joke</li>
                }
            </ul>
        }
    }
</div>
